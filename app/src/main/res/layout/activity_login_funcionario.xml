<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="#E6F4FA"
    tools:context=".LoginFuncionarioActivity">

    <!-- Título LOGIN FUNCIONÁRIO -->
    <TextView
        android:id="@+id/textLoginTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login do Funcionário"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1A73E8"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp" />

    <!-- Campo Matrícula -->
    <EditText
        android:id="@+id/editTextMatricula"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Digite sua matrícula"
        android:inputType="text"
        android:autofillHints="username"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Campo Senha -->
    <EditText
        android:id="@+id/editTextSenhaFuncionario"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Digite sua senha"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Botão Entrar -->
    <Button
        android:id="@+id/buttonEntrarFuncionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrar"
        android:paddingVertical="12dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:backgroundTint="#1A73E8"
        android:layout_marginBottom="16dp" />

    <!-- Esqueci Senha -->
    <TextView
        android:id="@+id/textViewEsqueciSenhaFuncionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueci a senha"
        android:textColor="#64B5F6"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
